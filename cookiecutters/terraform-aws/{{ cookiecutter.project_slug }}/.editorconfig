# EditorConfig is awesome: https://editorconfig.org

{% if cookiecutter.type == 'module' %}
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{tf,tfvars}]
indent_size = 2
{% else %}
[*.{tf,tfvars}]
indent_size = 2
{% endif %}
